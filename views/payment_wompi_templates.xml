<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="redirect_form">
        <form method="get">
            <div>
                <input type="hidden" name="data_set" t-att-value="tx_url" data-remove-me=""/>  
                <input type="hidden" name="public-key" t-att-value="merchantId" />
                <input type="hidden" name="currency" t-att-value='currency' />
                <input type="hidden" name="amount-in-cents" t-att-value='amount' />
                <input type="hidden" name="reference" t-att-value='referenceCode' />
                <input type="hidden" name="redirect-url" t-att-value='responseUrl' />
            </div>
        </form>
    </template>
</odoo>
